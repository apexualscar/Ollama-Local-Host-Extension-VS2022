<UserControl x:Class="OllamaLocalHostIntergration.Dialogs.ContextSearchDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
             toolkit:Themes.UseVsTheme="True"
             Width="600"
             Height="500"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Header -->
        <Border Grid.Row="0"
                BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarBorderKey}}"
                BorderThickness="0,0,0,1"
                Padding="16,12"
                Background="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarMenuBackgroundGradientKey}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                           Text="Add Context"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"
                           Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>

                <!-- Search Box -->
                <Border Grid.Row="1"
                        BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.ComboBoxBorderKey}}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Icon -->
                        <TextBlock Grid.Column="0"
                                   Text="&#xE721;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="14"
                                   Margin="10,0,8,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}"/>

                        <!-- Search TextBox -->
                        <TextBox x:Name="txtSearch"
                                 Grid.Column="1"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Height="32"
                                 VerticalContentAlignment="Center"
                                 FontSize="12"
                                 Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                                 CaretBrush="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                                 TextChanged="TxtSearch_TextChanged"/>

                        <!-- Placeholder -->
                        <TextBlock Grid.Column="1"
                                   x:Name="txtPlaceholder"
                                   Text="Search files, classes, methods..."
                                   FontSize="12"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}"
                                   IsHitTestVisible="False"/>

                        <!-- Loading Indicator -->
                        <TextBlock Grid.Column="2"
                                   x:Name="txtLoading"
                                   Text="&#xE895;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="14"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"
                                   Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="LoadingRotation" CenterX="7" CenterY="7"/>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0"
                                                           To="360"
                                                           Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Search Results -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}">
            <ItemsControl x:Name="resultsPanel">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Click="ResultItem_Click"
                                Tag="{Binding}"
                                HorizontalContentAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="16,8"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderThickness="0"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarHoverKey}}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Icon}"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="16"
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>

                                <!-- Content -->
                                <StackPanel Grid.Column="1">
                                    <!-- Name -->
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>
                                    
                                    <!-- Path/Details -->
                                    <TextBlock Text="{Binding Details}"
                                               FontSize="10"
                                               Opacity="0.7"
                                               Margin="0,2,0,0"
                                               Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>
                                </StackPanel>

                                <!-- Type Badge -->
                                <Border Grid.Column="2"
                                        Background="{DynamicResource {x:Static vsshell:VsBrushes.AccentPaleKey}}"
                                        CornerRadius="3"
                                        Padding="6,2"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TypeLabel}"
                                               FontSize="9"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource {x:Static vsshell:VsBrushes.AccentMediumKey}}"/>
                                </Border>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarBorderKey}}"
                BorderThickness="0,1,0,0"
                Padding="16,12"
                Background="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarMenuBackgroundGradientKey}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Quick Actions -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Active Document"
                            Click="ActiveDocument_Click"
                            Padding="8,4"
                            Margin="0,0,8,0"
                            FontSize="10"
                            Background="{DynamicResource {x:Static vsshell:VsBrushes.ButtonFaceKey}}"
                            Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ButtonTextKey}}"/>
                    
                    <Button Content="Selection"
                            Click="Selection_Click"
                            Padding="8,4"
                            FontSize="10"
                            Background="{DynamicResource {x:Static vsshell:VsBrushes.ButtonFaceKey}}"
                            Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ButtonTextKey}}"/>
                </StackPanel>

                <!-- Close Button -->
                <Button Grid.Column="1"
                        Content="Close"
                        Click="Close_Click"
                        Padding="16,4"
                        FontSize="11"
                        Background="{DynamicResource {x:Static vsshell:VsBrushes.ButtonFaceKey}}"
                        Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ButtonTextKey}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
