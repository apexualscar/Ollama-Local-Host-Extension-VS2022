<Window x:Class="OllamaLocalHostIntergration.Dialogs.DiffPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
        Title="Code Modification Preview"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}"
        ShowInTaskbar="False"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
        </Style>
        
        <Style x:Key="CodeTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarBorderKey}}"/>
            <Setter Property="Background" Value="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Review Code Changes"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,16"
                   Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
        
        <!-- Description -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock Text="Description:"
                       Style="{StaticResource HeaderStyle}"/>
            <TextBlock x:Name="txtDescription"
                       TextWrapping="Wrap"
                       FontSize="11"
                       Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
        </StackPanel>
        
        <!-- Diff View -->
        <TabControl Grid.Row="2" Margin="0,0,0,16">
            <!-- Side-by-Side View -->
            <TabItem Header="Side-by-Side">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Original Code -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Original Code"
                                   Style="{StaticResource HeaderStyle}"
                                   Foreground="#D73A49"/>
                        <TextBox x:Name="txtOriginalCode"
                                 Style="{StaticResource CodeTextBoxStyle}"/>
                    </StackPanel>
                    
                    <!-- Modified Code -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Modified Code"
                                   Style="{StaticResource HeaderStyle}"
                                   Foreground="#28A745"/>
                        <TextBox x:Name="txtModifiedCode"
                                 Style="{StaticResource CodeTextBoxStyle}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- Unified Diff View -->
            <TabItem Header="Unified Diff">
                <StackPanel>
                    <TextBlock Text="Unified Diff (- removed, + added)"
                               Style="{StaticResource HeaderStyle}"/>
                    <TextBox x:Name="txtUnifiedDiff"
                             Style="{StaticResource CodeTextBoxStyle}"
                             TextWrapping="NoWrap"/>
                </StackPanel>
            </TabItem>
        </TabControl>
        
        <!-- File Info -->
        <Border Grid.Row="3"
                Background="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarMenuBackgroundGradientKey}}"
                BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarBorderKey}}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="10"
                Margin="0,0,0,16">
            <StackPanel>
                <TextBlock x:Name="txtFileInfo"
                           FontSize="10"
                           Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
                <TextBlock x:Name="txtStats"
                           FontSize="10"
                           Margin="0,4,0,0"
                           Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
            </StackPanel>
        </Border>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Width="100"
                    Height="32"
                    Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button Content="Apply Changes"
                    Width="120"
                    Height="32"
                    Click="Apply_Click"
                    Background="{DynamicResource {x:Static vsshell:VsBrushes.AccentMediumKey}}"
                    Foreground="White"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
