<UserControl x:Class="OllamaLocalHostIntergration.MyToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
             xmlns:local="clr-namespace:OllamaLocalHostIntergration"
             xmlns:converters="clr-namespace:OllamaLocalHostIntergration.Converters"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             toolkit:Themes.UseVsTheme="True"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="400"
             Name="MyToolWindow"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}">
    <UserControl.Resources>
        <local:BoolToRoleConverter x:Key="BoolToRoleConverter"/>
        <converters:BoolToIconConverter x:Key="BoolToIconConverter"/>
        <converters:BoolToUserColorConverter x:Key="BoolToUserColorConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat Messages Area -->
        <ScrollViewer x:Name="chatMessagesScroll" 
                      Grid.Row="0" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="16,16,16,8"
                      Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}">
            <ItemsControl x:Name="chatMessagesPanel">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,20" 
                                Padding="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Header with icon -->
                                <StackPanel Grid.Row="0" 
                                           Orientation="Horizontal"
                                           Margin="0,0,0,8">
                                    <Border Width="24" 
                                            Height="24" 
                                            CornerRadius="12"
                                            Background="{Binding IsUser, Converter={StaticResource BoolToUserColorConverter}}"
                                            Margin="0,0,10,0">
                                        <TextBlock Text="{Binding IsUser, Converter={StaticResource BoolToIconConverter}}"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   Foreground="White"
                                                   FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="{Binding IsUser, Converter={StaticResource BoolToRoleConverter}}"
                                               FontWeight="SemiBold"
                                               FontSize="13"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
                                </StackPanel>
                                
                                <!-- Message Content -->
                                <TextBlock Grid.Row="1" 
                                         Text="{Binding Content}"
                                         TextWrapping="Wrap"
                                         FontSize="12"
                                         LineHeight="22"
                                         Margin="34,0,0,0"
                                         Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Input Area with Controls (Copilot-style at bottom) -->
        <Border Grid.Row="1" 
                BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarBorderKey}}"
                BorderThickness="0,1,0,0"
                Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}"
                Padding="16,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Toolbar with Mode, Model, and Settings -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Mode Dropdown -->
                    <ComboBox x:Name="comboMode" 
                              Grid.Column="0"
                              Width="90"
                              Height="32"
                              FontSize="11"
                              VerticalAlignment="Center"
                              VerticalContentAlignment="Center"
                              Margin="0,0,8,0"
                              Padding="8,4"
                              Background="{DynamicResource {x:Static vsshell:VsBrushes.ComboBoxBackgroundKey}}"
                              Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                              BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.ComboBoxBorderKey}}"
                              SelectionChanged="ComboMode_SelectionChanged">
                        <ComboBoxItem Content="Ask" IsSelected="True" Tag="Ask"/>
                        <ComboBoxItem Content="Agent" Tag="Agent"/>
                    </ComboBox>
                    
                    <!-- Model Dropdown (Always Visible) -->
                    <ComboBox x:Name="comboModels" 
                              Grid.Column="1"
                              Height="32"
                              FontSize="11"
                              VerticalAlignment="Center"
                              VerticalContentAlignment="Center"
                              Margin="0,0,8,0"
                              Padding="8,4"
                              Background="{DynamicResource {x:Static vsshell:VsBrushes.ComboBoxBackgroundKey}}"
                              Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                              BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.ComboBoxBorderKey}}"
                              SelectionChanged="ComboModels_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8AD;" 
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="12" 
                                               Margin="0,0,6,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding}" 
                                               FontSize="11"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <!-- New Conversation Button -->
                    <Button Grid.Column="2"
                            Content="&#xE8F4;"
                            FontFamily="Segoe MDL2 Assets"
                            Click="NewConversationClick"
                            Width="28"
                            Height="28"
                            Margin="0,0,4,0"
                            VerticalAlignment="Center"
                            ToolTip="New conversation"
                            FontSize="12"
                            Padding="0"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Background="{DynamicResource {x:Static vsshell:VsBrushes.ButtonFaceKey}}"
                            Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ButtonTextKey}}"/>
                    
                    <!-- Settings Button (Smaller) -->
                    <Button Grid.Column="3"
                            x:Name="btnSettings"
                            Content="&#xE713;"
                            FontFamily="Segoe MDL2 Assets"
                            Width="28"
                            Height="28"
                            Margin="0,0,4,0"
                            VerticalAlignment="Center"
                            ToolTip="Settings"
                            FontSize="12"
                            Padding="0"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Background="{DynamicResource {x:Static vsshell:VsBrushes.ButtonFaceKey}}"
                            Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ButtonTextKey}}"
                            Click="SettingsClick"/>
                    
                    <!-- Clear Chat Button (Top Right like Copilot) -->
                    <Button Grid.Column="4"
                            Content="&#xE74D;"
                            FontFamily="Segoe MDL2 Assets"
                            Click="ClearChatClick"
                            Width="28"
                            Height="28"
                            VerticalAlignment="Center"
                            ToolTip="Clear chat (saves conversation)"
                            FontSize="12"
                            Padding="0"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Background="{DynamicResource {x:Static vsshell:VsBrushes.ButtonFaceKey}}"
                            Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ButtonTextKey}}"/>
                </Grid>
                
                <!-- Settings Panel (Collapsible) -->
                <Border Grid.Row="1" 
                        x:Name="settingsPanel"
                        Visibility="Collapsed"
                        BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarBorderKey}}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        Margin="0,0,0,8"
                        Background="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarMenuBackgroundGradientKey}}">
                    <StackPanel>
                        <TextBlock Text="Settings" 
                                   FontSize="11" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
                        
                        <!-- Server Address -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Server:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,8,0"
                                       FontSize="11"
                                       Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
                            <TextBox x:Name="txtServerAddress" 
                                     Grid.Column="1"
                                     FontSize="11"
                                     Height="26"
                                     VerticalContentAlignment="Center"
                                     Padding="6,0"
                                     Margin="0,0,8,0"
                                     Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
                                     Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                                     CaretBrush="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                                     BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.ComboBoxBorderKey}}"/>
                            <Button Grid.Column="2"
                                    Content="&#xE8EF;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Click="RefreshModelsClick"
                                    Width="26"
                                    Height="26"
                                    ToolTip="Refresh models"
                                    FontSize="12"
                                    Padding="0"
                                    VerticalContentAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    Background="{DynamicResource {x:Static vsshell:VsBrushes.ButtonFaceKey}}"
                                    Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ButtonTextKey}}"/>
                        </Grid>
                        
                        <!-- Context Files Section -->
                        <TextBlock Text="Context Files:" 
                                   FontSize="11" 
                                   Margin="0,4,0,4"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
                        <ListBox x:Name="lstContextFiles"
                                 Height="80"
                                 Margin="0,0,0,4"
                                 Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
                                 Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                                 BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.ComboBoxBorderKey}}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding DisplayText}"
                                                   FontSize="10"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>
                                        <Button Grid.Column="1"
                                                Content="&#x00D7;"
                                                Width="18"
                                                Height="18"
                                                FontSize="14"
                                                Padding="0"
                                                Margin="4,0,0,0"
                                                ToolTip="Remove file"
                                                Click="RemoveContextFileClick"
                                                Tag="{Binding FilePath}"
                                                Background="{DynamicResource {x:Static vsshell:VsBrushes.ButtonFaceKey}}"
                                                Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ButtonTextKey}}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Content="+ Add File"
                                    Click="AddContextFileClick"
                                    FontSize="10"
                                    Padding="6,4"
                                    HorizontalAlignment="Left"
                                    Background="{DynamicResource {x:Static vsshell:VsBrushes.ButtonFaceKey}}"
                                    Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ButtonTextKey}}"/>
                            <Button Grid.Column="1"
                                    Content="Clear All"
                                    Click="ClearContextFilesClick"
                                    FontSize="10"
                                    Padding="6,4"
                                    Margin="4,0,0,0"
                                    Background="{DynamicResource {x:Static vsshell:VsBrushes.ButtonFaceKey}}"
                                    Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ButtonTextKey}}"/>
                        </Grid>
                        <TextBlock x:Name="txtContextFilesSummary"
                                   Text="No files in context"
                                   FontSize="10"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
                        
                        <!-- Code Context -->
                        <TextBlock Text="Active Document Context:" 
                                   FontSize="11" 
                                   Margin="0,0,0,4"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
                        <TextBox x:Name="txtCodeContext" 
                                 IsReadOnly="True" 
                                 TextWrapping="Wrap" 
                                 VerticalScrollBarVisibility="Auto" 
                                 Height="60" 
                                 FontFamily="Consolas" 
                                 FontSize="10"
                                 Margin="0,0,0,4"
                                 Padding="6"
                                 Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
                                 Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                                 CaretBrush="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                                 BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.ComboBoxBorderKey}}"/>
                        <TextBlock x:Name="txtTokenCount"
                                   Text="Tokens: 0"
                                   FontSize="10"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
                        <Button Content="Refresh Context" 
                                Click="RefreshContextClick"
                                HorizontalAlignment="Left"
                                Padding="10,6"
                                FontSize="11"
                                Background="{DynamicResource {x:Static vsshell:VsBrushes.ButtonFaceKey}}"
                                Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ButtonTextKey}}"/>
                    </StackPanel>
                </Border>
                
                <!-- Input TextBox -->
                <Border Grid.Row="2"
                        BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarBorderKey}}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBox x:Name="txtUserInput" 
                                 Grid.Row="0"
                                 BorderThickness="0"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 MinHeight="60"
                                 MaxHeight="200"
                                 VerticalScrollBarVisibility="Auto"
                                 FontSize="12"
                                 Padding="12,10"
                                 Background="Transparent"
                                 Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                                 CaretBrush="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>
                        
                        <!-- Send Button -->
                        <Button Grid.Row="1"
                                Content="Send"
                                Click="SendMessageClick"
                                HorizontalAlignment="Right"
                                Margin="8,0,8,8"
                                Padding="20,6"
                                FontSize="11"
                                FontWeight="SemiBold"
                                Background="{DynamicResource {x:Static vsshell:VsBrushes.AccentMediumKey}}"
                                Foreground="White"
                                BorderThickness="0"
                                ToolTip="Send message (Enter)"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarMenuBackgroundGradientKey}}"
                BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarBorderKey}}"
                BorderThickness="0,1,0,0"
                Padding="16,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Status Text -->
                <TextBlock x:Name="txtStatusBar" 
                           Grid.Column="0"
                           Text="Ready"
                           FontSize="10"
                           Opacity="0.7"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
                
                <!-- Selected Model Indicator -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="Model: "
                               FontSize="10"
                               Opacity="0.7"
                               Margin="0,0,4,0"
                               Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
                    <TextBlock x:Name="txtSelectedModel"
                               Text="No model selected"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTextKey}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
